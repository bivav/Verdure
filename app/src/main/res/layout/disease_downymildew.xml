<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/downyMildew"
                android:textColor="#000000"
                android:paddingBottom="5dp"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Causes :"
                android:textStyle="italic"
                android:textAllCaps="true"

                android:id="@+id/textView2"
                android:layout_below="@+id/textView"
                android:autoText="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fungal"
                android:id="@+id/textView3"
                android:layout_above="@+id/howToIdentify"
                android:layout_alignRight="@+id/textView5"
                android:layout_alignEnd="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="How to Identify :"
                android:id="@+id/howToIdentify"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:paddingBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small lesions leaves; yellowish necrotic patches; white growth leaves"
                android:id="@+id/textBlackLeg"
                android:layout_below="@+id/howToIdentify"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Remedies :"
                android:id="@+id/remedies"
                android:textColor="#000000"
                android:layout_below="@+id/textBlackLeg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp" />

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Organic Remedy :"
                android:id="@+id/organic_remedy"
                android:paddingBottom="5dp"
                android:layout_below="@+id/remedies"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One way to control downy mildew is to eliminate moisture and humidity around the impacted plants. Watering from below, such as with a drip system, and improve air circulation through selective pruning. In enclosed environments, like in the house or in a greenhouse, reducing the humidity will help as well."
                android:textSize="15sp"
                android:id="@+id/textView4"
                android:layout_below="@+id/organic_remedy"
                android:textColor="#000000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Inorganic Remedy :"
                android:id="@+id/textView5"
                android:paddingBottom="5dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView4"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Broad spectrum protectant fungicides such as chlorothalonil, mancozeb, and fixed copper are at least somewhat effective in protecting against downy mildew infection. Systemic fungicides are labeled for use against cucurbit downy mildew, but are recommended only after diagnosis of this disease has been confirmed."
                android:textSize="15sp"
                android:id="@+id/textView6"
                android:textColor="#000000"
                android:layout_below="@+id/textView5" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>